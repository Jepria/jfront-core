{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "registry": "https://registry.npmjs.org/",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": ["**/stories/**", "**/tests/**", "./examples/**", "**/*.md"],
      "allowBranch": "master"
    },
    "version": {
      "ignoreChanges": ["**/stories/**", "**/tests/**", "./examples/**", "**/*.md"],
      "allowBranch": ["master", "release/*", "hotfix/*"]
    }
  }
}
